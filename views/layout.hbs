<!-- views/layout.hbs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="../public/stylesheets/style.css">
    <link rel="stylesheet" href="/portfolio/styles/main.css">
</head>
<body class="bg-dark">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light ">
            <a class="navbar-brand" href="/">Home</a>
            <a class="navbar-brand" href="/about">About Me</a>
            <a class="navbar-brand" href="/projects">Projects</a>
            <a class="navbar-brand" href="/contact">Contact Me</a>
        </nav>
    </header>

    <div class="container mt-4">
        {{{body}}}
    </div>

    <footer class="footer mt-auto py-3 bg-dark">
        <div class="container">
            <p>&copy; 2024 Your Name. Find me on <a href="https://github.com/yourusername">GitHub</a> and <a href="https://linkedin.com/in/yourprofile">LinkedIn</a></p>
        </div>
    </footer>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
<style>
  body {
  padding: 50px;
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
  color: black;
}

a {
  color: #00B7FF;
}

.navbar{
  background-color: #1e2022;
  padding: 3em;
  align-items: center;
}

.navbar-brand {
  color: #ffffff !important; /* White text color for links */
}

.navbar-brand:hover {
  color: #ffc107 !important; /* Yellow on hover */
}

/* Styling for sections */
.section-title {
  text-align: center;
  margin-bottom: 30px;
}

.about-section {
  padding: 80px 0;
  background-color: #f8f9fa; /* Light gray background */
}

.projects-section {
  padding: 80px 0;
  background-color: #e9ecef; /* Lighter gray background */
}

.contact-section {
  padding: 80px 0;
  background-color: #f8f9fa; /* Light gray background */
}

.card {
  border: none;
  border-radius: 10px;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
}

.card-body {
  font-size: 18px;
}

/* Button styles */
.btn-primary {
  background-color: #007bff; /* Blue background */
  border-color: #007bff;
}

.btn-primary:hover {
  background-color: #0056b3; /* Darker blue on hover */
  border-color: #0056b3;
}

/* Footer styles */
.footer {
  background-color: #343a40; /* Dark footer background */
  color: #ffffff; /* White text color */
  text-align: center;
  padding: 20px 0;
}

.footer a {
  color: #ffc107; /* Yellow text color for links */
}

.footer a:hover {
  color: #ffffff; /* White on hover */
  text-decoration: none;
}

</style>
</html>
